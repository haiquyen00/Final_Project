@{
    ViewData["Title"] = "Access Denied";
}

<div class="text-center py-5">
    <h1 class="display-4 text-danger">Access Denied</h1>
    <p class="lead">You do not have permission to access this page.</p>
    @if (User.Identity.IsAuthenticated)
    {
        <p>Sorry, @User.Identity.Name, this page is restricted to Admins only.</p>
    }
    else
    {
        <p>Please log in with an Admin account to access this page.</p>
        <a asp-controller="Home" asp-action="Login" class="btn btn-primary mt-3">Login</a>
    }
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">Back to Home</a>
</div>