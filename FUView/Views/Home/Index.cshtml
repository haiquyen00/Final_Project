@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center py-5">
    @if (User.Identity.IsAuthenticated)
    {
        <!-- Đã đăng nhập -->
        <div class="welcome-container">
            <h1 class="display-4 mb-3" style="color: #2c3e50; font-weight: bold;">
                Welcome, @User.Identity.Name!
            </h1>

            @if (User.IsInRole("Admin"))
            {
                <!-- Admin -->
                <div class="role-box admin-box p-4 rounded shadow-sm">
                    <p class="mb-0" style="font-size: 1.2rem; color: #ffffff;">
                        <i class="fas fa-crown me-2"></i>You are an <strong>Admin</strong>
                    </p>
                    <a href="@Url.Action("Index", "Courses")" class="btn btn-light btn-sm mt-3">
                        Go to Admin Dashboard
                    </a>
                </div>
            }
            else
            {
                <!-- User -->
                <div class="role-box user-box p-4 rounded shadow-sm">
                    <p class="mb-0" style="font-size: 1.2rem; color: #34495e;">
                        <i class="fas fa-user me-2"></i>You are a <strong>User</strong>
                    </p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-sm mt-3">
                        Explore More
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Chưa đăng nhập -->
        <div class="guest-container">
            <h1 class="display-4 mb-4" style="color: #3498db; font-weight: 600;">
                Welcome to Our Site
            </h1>
            <p class="lead" style="color: #7f8c8d;">
                Learn about
                <a href="https://learn.microsoft.com/aspnet/core" class="text-primary fw-bold" target="_blank">
                    building Web apps with ASP.NET Core
                </a>
                or join us today!
            </p>
            <div class="mt-4">
                <a href="@Url.Action("Login", "Home")" class="btn btn-primary me-2">
                    <i class="fas fa-sign-in-alt me-1"></i> Login
                </a>
                <a href="@Url.Action("Register", "Home")" class="btn btn-outline-secondary">
                    <i class="fas fa-user-plus me-1"></i> Register
                </a>
            </div>
        </div>
    }
</div>

<!-- CSS tùy chỉnh -->
<style>
    .welcome-container {
        background: linear-gradient(135deg, #ecf0f1, #bdc3c7);
        padding: 30px;
        border-radius: 15px;
        max-width: 600px;
        margin: 0 auto;
    }

    .role-box {
        transition: transform 0.2s ease;
    }

        .role-box:hover {
            transform: translateY(-5px);
        }

    .admin-box {
        background-color: #e74c3c; /* Màu đỏ cho Admin */
    }

    .user-box {
        background-color: #ecf0f1; /* Màu xám nhạt cho User */
        border: 1px solid #dcdcdc;
    }

    .guest-container {
        background: #f9f9f9;
        padding: 40px;
        border-radius: 20px;
        max-width: 700px;
        margin: 0 auto;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: scale(1.05);
        }
</style>