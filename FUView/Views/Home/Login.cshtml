@model Business.Models.User

@{
    ViewData["Title"] = "Login";
}

<!-- Thêm CSS tùy chỉnh -->
<style>
    .login-container {
        background: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
        margin: 40px auto;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    main {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: calc(100vh - 56px - 56px);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .btn-primary {
        border-radius: 8px;
        padding: 10px;
        font-weight: 500;
    }

    .form-outline .form-control {
        border: 1px solid #ced4da !important;
        border-radius: 4px !important;
        padding: 10px !important;
    }

    .form-outline .form-label {
        color: #495057 !important;
        background: #fff !important;
        padding: 0 5px !important;
    }

    .form-outline .form-control:focus ~ .form-label,
    .form-outline .form-control:not(:placeholder-shown) ~ .form-label {
        transform: translateY(-1.5rem) translateX(0.2rem) scale(0.8);
        background: #fff;
        padding: 0 5px;
    }

    .error-message {
        color: red;
        font-size: 0.875rem;
        margin-top: 5px;
        text-align: center;
    }
</style>

<div class="login-container">
    <h2 class="text-center mb-4">Login</h2>
    <form asp-action="Login" method="post" id="loginForm">
        <div class="text-center mb-3">
            <p>Sign in with:</p>
            <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                <i class="fab fa-facebook-f"></i>
            </button>
            <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                <i class="fab fa-google"></i>
            </button>
            <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                <i class="fab fa-twitter"></i>
            </button>
            <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                <i class="fab fa-github"></i>
            </button>
        </div>

        <p class="text-center">or:</p>

        @if (TempData["Error"] != null)
        {
            <div class="error-message">@TempData["Error"]</div>
        }

        <div data-mdb-input-init class="form-outline mb-4">
            <input asp-for="Email" class="form-control" value="@Model?.Email" />
            <label class="form-label" for="Email">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div data-mdb-input-init class="form-outline mb-4">
            <input asp-for="Password" type="password" class="form-control" />
            <label class="form-label" for="Password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="row mb-4">
            <div class="col-md-6 d-flex justify-content-center">
                <div class="form-check mb-3 mb-md-0">
                    <input class="form-check-input" type="checkbox" value="" id="loginCheck" checked />
                    <label class="form-check-label" for="loginCheck"> Remember me </label>
                </div>
            </div>
            <div class="col-md-6 d-flex justify-content-center">
                <a asp-action="ForgotPassword" asp-controller="Home">Forgot password?</a>
            </div>
        </div>

        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-3">Sign in</button>

        <div class="text-center">
            <p>Not a member? <a asp-action="Register" asp-controller="Home">Register</a></p>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}